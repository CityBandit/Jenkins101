pipeline{
    agent any 
    stages {
        stage("Checkout") {
            steps{
                echo "Checking out the repository ...."
            }
        }
        stage("Build") {
            steps {
                echo "Building your applications ...."
            }
        }
        stage("Test") {
            steps {
                echo "Testing your application ....."
            }
        }
        stage("Deploy") {
            steps {
                echo "Deploying your application ....."
            }
        }

    }
}